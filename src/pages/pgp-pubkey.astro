---
import * as Pubkey from '$lib/assets/pubkey.md';
import { Button } from '$lib/components/ui/button/index.js';
import Download from '$lib/icons/download.svelte';
import Layout from '$lib/layouts/Layout.astro';
import CopyButton from '$lib/components/copyButton.svelte';
import { Toaster } from '$lib/components/ui/sonner';
---

<Layout description="April Hall's PGP Publickey" pageTitle="PGP Pubkey">
  <Toaster client:load offset="20px" visibleToasts={3} />
  <div
    class="font-code mx-auto h-fit w-11/12 overflow-y-scroll px-2 py-4 md:absolute md:top-1/2 md:left-1/2 md:w-fit md:-translate-x-1/2 md:-translate-y-1/2 md:overflow-hidden md:p-0"
  >
    <h1 class="mb-1 w-full pl-1">pgp_public_key.asc</h1>
    <pre
      class="bg-mantle border-border h-fit w-full rounded-md border p-4 text-wrap break-words md:size-fit"><Pubkey.Content /></pre>
    <div class="flex flex-col gap-1 md:flex-row md:gap-3">
      <Button class="align-center mt-2 flex w-full justify-center md:mt-3" variant="outline" href="/pgp_public_key.asc">
        <Download />
        <span>Download</span>
      </Button>
      <CopyButton text={Pubkey.rawContent()} client:load />
    </div>
  </div>
</Layout>
