---
import '$lib/styles/global.css';
import { Button } from '$lib/components/ui/button';
import Head from './Head.astro';

interface Props {
  code: number;
  message: string;
}

const { code, message } = Astro.props;
---

<!doctype html>
<html lang="en" class="m-0 size-full">
  <Head description={`${code} - ${message}`} pageTitle={code} />
  <body class="bg-topography size-full">
    <div class="flex size-full flex-col items-center justify-center">
      <h1 class="text-mauve w-fit text-[35vw] leading-none font-black md:text-[50vh]">{code}</h1>
      <h3 class="w-3/4 text-center text-lg md:w-full">{message}</h3>
      <div class="mt-2 flex gap-2">
        <Button href="/">Go Home</Button>
        <Button href="mailto:ari@arithefirst.com">Email the owner</Button>
      </div>
    </div>
  </body>
</html>
