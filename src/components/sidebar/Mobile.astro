---
import Buttons from '$lib/components/sidebar/Buttons.astro';
import Kitty from '$lib/images/kitty.png';
import { Image } from 'astro:assets';
import MobilePaletteOpen from './MobilePaletteOpen.svelte';
---

<nav class="bg-mantle flex h-1/5 flex-col items-center justify-center p-4 shadow-2xl md:hidden">
  <div class="flex items-center justify-center">
    <Image
      src={Kitty}
      alt="An orange cat hugging a creeper plushie"
      class="h-16 w-16 rounded-full shadow-lg"
      loading="eager"
    />
    <hr class="border-subtext-0 mx-2 h-3/4 border-l-1" />
    <div class="block w-fit">
      <h1 class="w-fit text-2xl">Hi, I'm <span class="font-bold">April Hall</span></h1>
      <div class="font-roboto w-fit text-xs">
        <p class="w-fit">Your friendly neighborhood</p>
        <p class="w-fit">fullstack developer</p>
      </div>
    </div>
  </div>
  <Buttons class="mt-2 scale-75" />
</nav>

<MobilePaletteOpen client:load />
